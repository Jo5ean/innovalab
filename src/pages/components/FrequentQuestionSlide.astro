---
import { getFAQByCategory } from '@/utils/fq';

const preguntasCursado = getFAQByCategory('durante_el_cursado');
const preguntasExamenes = getFAQByCategory('examenes_finales');
---

<div id="faq-slide" class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <!-- Encabezado -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">
                Preguntas Frecuentes
            </h1>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Encuentra respuestas rápidas a las dudas más comunes sobre tu cursado y exámenes
            </p>
        </div>

        <!-- Contenedor principal -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Sección Durante el Cursado -->
            <div class="bg-white rounded-2xl shadow-xl p-6 transform transition-all hover:scale-[1.02]">
                <div class="flex items-center mb-6">
                    <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-semibold text-gray-900">Durante el Cursado</h2>
                </div>
                <div class="space-y-4">
                    {preguntasCursado.map((faq, index) => (
                        <div class="border-b border-gray-200 last:border-0 pb-4 last:pb-0">
                            <details class="group">
                                <summary class="flex justify-between items-center cursor-pointer">
                                    <h3 class="text-lg font-medium text-gray-900 group-hover:text-blue-600">
                                        {faq.pregunta}
                                    </h3>
                                    <span class="ml-6 flex-shrink-0">
                                        <svg class="w-6 h-6 text-gray-400 group-hover:text-blue-600 transform group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                        </svg>
                                    </span>
                                </summary>
                                <div class="mt-3 text-gray-600 prose prose-blue max-w-none">
                                    <p class="whitespace-pre-line">{faq.respuesta}</p>
                                </div>
                            </details>
                        </div>
                    ))}
                </div>
            </div>

            <!-- Sección Exámenes Finales -->
            <div class="bg-white rounded-2xl shadow-xl p-6 transform transition-all hover:scale-[1.02]">
                <div class="flex items-center mb-6">
                    <div class="w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-semibold text-gray-900">Exámenes Finales</h2>
                </div>
                <div class="space-y-4">
                    {preguntasExamenes.map((faq, index) => (
                        <div class="border-b border-gray-200 last:border-0 pb-4 last:pb-0">
                            <details class="group">
                                <summary class="flex justify-between items-center cursor-pointer">
                                    <h3 class="text-lg font-medium text-gray-900 group-hover:text-indigo-600">
                                        {faq.pregunta}
                                    </h3>
                                    <span class="ml-6 flex-shrink-0">
                                        <svg class="w-6 h-6 text-gray-400 group-hover:text-indigo-600 transform group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                        </svg>
                                    </span>
                                </summary>
                                <div class="mt-3 text-gray-600 prose prose-indigo max-w-none">
                                    <p class="whitespace-pre-line">{faq.respuesta}</p>
                                </div>
                            </details>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    details > summary {
        list-style: none;
    }
    details > summary::-webkit-details-marker {
        display: none;
    }
</style>

