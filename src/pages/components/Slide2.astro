<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Elementos del formulario de b√∫squeda
    const dniInput = document.getElementById('dni-input') as HTMLInputElement;
    const searchButton = document.getElementById('search-button') as HTMLButtonElement;
    const searchResult = document.getElementById('search-result') as HTMLDivElement;
    
    // Funci√≥n para realizar la b√∫squeda
    function realizarBusqueda() {
      const dni = dniInput.value.trim();
      
      if (!dni) {
        searchResult.innerHTML = '<div class="error-message">Por favor, ingresa un DNI v√°lido</div>';
        return;
      }
      
      // Verificar que solo contenga n√∫meros
      if (!/^\d+$/.test(dni)) {
        searchResult.innerHTML = '<div class="error-message">El DNI debe contener solo n√∫meros</div>';
        return;
      }
      
      // Verificar longitud m√≠nima
      if (dni.length < 7 || dni.length > 10) {
        searchResult.innerHTML = '<div class="error-message">El DNI debe tener entre 7 y 10 d√≠gitos</div>';
        return;
      }
      
      // Mostrar mensaje de carga
      searchResult.innerHTML = '<div class="loading-message">Buscando informaci√≥n...</div>';
      
      // Usar la funci√≥n global consultarPorDNI del componente SlideResults
      if (typeof window.consultarPorDNI === 'function') {
        // Limpiar el mensaje de carga y el input
        searchResult.innerHTML = '';
        window.consultarPorDNI(dni);
        dniInput.value = '';
      } else {
        searchResult.innerHTML = '<div class="error-message">Error al consultar. Por favor, intenta m√°s tarde.</div>';
      }
    }
    
    // Agregar event listener al bot√≥n de b√∫squeda
    if (searchButton) {
      searchButton.addEventListener('click', realizarBusqueda);
    }
    
    // Tambi√©n permitir presionar Enter para buscar
    if (dniInput) {
      dniInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
          realizarBusqueda();
        }
      });
      
      // Enfocar autom√°ticamente el input
      dniInput.focus();
    }
    
    // Configuraci√≥n del bot√≥n de ingresantes para navegar a la slide 4
    const ingresantesBtn = document.getElementById('ingresantes-btn');
    if (ingresantesBtn) {
      ingresantesBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        console.log("Bot√≥n INGRESANTES clickeado - intentando navegar a slide 4...");
        
        // M√©todo 1: Emitir evento personalizado para navegaci√≥n
        const navigationEvent = new CustomEvent('navigateToSlide', { 
          detail: { slideIndex: 3 },
          bubbles: true
        });
        document.dispatchEvent(navigationEvent);
        
        // M√©todo 2: Usar directamente la instancia global de Swiper
        if (typeof window !== 'undefined' && 'swiperInstance' in window) {
          try {
            (window as any).swiperInstance.slideTo(3);
            console.log("Navegaci√≥n a slide 4 ejecutada con swiperInstance");
          } catch (error) {
            console.error("Error al navegar usando swiperInstance:", error);
          }
        }
      });
    }
    
    // Configuraci√≥n del bot√≥n de ex√°menes finales para navegar a la slide 3
    const examenesBtn = document.getElementById('examenes-btn');
    if (examenesBtn) {
      examenesBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        console.log("Bot√≥n EX√ÅMENES FINALES clickeado - intentando navegar a slide 3...");
        
        // M√©todo 1: Emitir evento personalizado para navegaci√≥n
        const navigationEvent = new CustomEvent('navigateToSlide', { 
          detail: { slideIndex: 2 },
          bubbles: true
        });
        document.dispatchEvent(navigationEvent);
        
        // M√©todo 2: Usar directamente la instancia global de Swiper
        if (typeof window !== 'undefined' && 'swiperInstance' in window) {
          try {
            (window as any).swiperInstance.slideTo(2);
            console.log("Navegaci√≥n a slide 3 ejecutada con swiperInstance");
          } catch (error) {
            console.error("Error al navegar usando swiperInstance:", error);
          }
        }
      });
    }
    
    // Agregar stopPropagation a todos los botones de tarjeta
    const cardButtons = document.querySelectorAll('.card-button');
    cardButtons.forEach(button => {
      if (button.id !== 'ingresantes-btn' && button.id !== 'examenes-btn' && button.id !== 'equivalencias-btn') { // Ignorar botones con manejador propio
        button.addEventListener('click', (e) => {
          e.stopPropagation(); // Prevenir que se propague a los botones de navegaci√≥n
          // Aqu√≠ va la l√≥gica de la tarjeta (si hay alguna)
          console.log('Tarjeta clickeada:', (e.currentTarget as HTMLElement).textContent?.trim());
        });
      }
    });
    
    // Detectar y adaptar a pantallas t√°ctiles
    const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
    if (isTouchDevice) {
      document.body.classList.add('touch-device');
    }

    const equivalenciasBtn = document.getElementById('equivalencias-btn');
    const equivalenciasModal = document.getElementById('equivalencias-modal');
    const closeModal = document.getElementById('close-modal');

    if (equivalenciasBtn && equivalenciasModal && closeModal) {
      equivalenciasBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        equivalenciasModal.classList.add('active');
