<div class="buttons-menu-slide">
  <div class="gradient-background"></div>
  <div class="buttons-container">
    <button class="menu-button" type="button" data-action="inscripcion">
      <span>INSCRIPCIÓN</span>
    </button>
    <button class="menu-button" type="button" data-action="legajo-digital">
      <span>LEGAJO DIGITAL</span>
    </button>
    <button class="menu-button" type="button" data-action="ingreso-art7">
      <span>INGRESO POR ART. 7</span>
    </button>
  </div>
</div>

<style>
  .buttons-menu-slide {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .gradient-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #00235B 0%, #7B0000 100%);
    z-index: -1;
  }

  .buttons-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    max-width: 1200px;
    width: 90%;
    padding: 0 20px;
  }

  .menu-button {
    background-color: #E53935; /* Color rojo similar al de la imagen */
    color: white;
    font-weight: bold;
    text-decoration: none;
    text-align: center;
    padding: 40px 20px;
    border: none;
    border-radius: 8px;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    min-height: 180px;
    font-size: 1.5rem;
    width: 100%;
  }

  .menu-button:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.4);
  }

  /* Responsive */
  @media (max-width: 900px) {
    .buttons-container {
      grid-template-columns: 1fr;
      gap: 15px;
    }

    .menu-button {
      min-height: 120px;
      padding: 25px 15px;
      font-size: 1.2rem;
    }
  }
</style>

<script>
  // Script adaptado para Swiper
  document.addEventListener('DOMContentLoaded', function() {
    // Botones de acción también son manejados desde index.astro
    const actionButtons = document.querySelectorAll('.menu-button[data-action]');
    actionButtons.forEach(button => {
      button.addEventListener('click', function(this: HTMLButtonElement, e) {
        e.stopPropagation(); // Prevenir propagación
        // La navegación ahora se maneja desde el componente principal de Swiper
      });
    });
  });
</script> 