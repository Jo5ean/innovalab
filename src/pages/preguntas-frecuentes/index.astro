---
import Layout from "../../layouts/Layout.astro";
import { getFAQByCategory } from '../../utils/fq';

const preguntasCursado = getFAQByCategory('durante_el_cursado');
const preguntasExamenes = getFAQByCategory('examenes_finales');
---

<Layout>
  <div class="gradient-background"></div>
  <div id="faq-slide" class="relative min-h-screen py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto relative z-10">
          <!-- Encabezado -->
          <div class="text-center mb-8">
              <h1 class="text-3xl font-bold text-white mb-3">
                  Preguntas Frecuentes
              </h1>
              <p class="text-lg text-gray-200 max-w-2xl mx-auto">
                  Encuentra respuestas rápidas a las dudas más comunes sobre tu cursado y exámenes
              </p>
          </div>

          <!-- Contenedor principal -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
              <!-- Sección Durante el Cursado -->
              <div class="bg-white rounded-xl shadow-lg p-5 transform transition-all hover:scale-[1.02]">
                  <div class="flex items-center mb-4">
                      <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                          </svg>
                      </div>
                      <h2 class="text-xl font-semibold text-gray-900">Durante el Cursado</h2>
                  </div>
                  <div class="space-y-3">
                      {preguntasCursado.map((faq, index) => (
                          <div class="border-b border-gray-200 last:border-0 pb-3 last:pb-0">
                              <details class="group">
                                  <summary class="flex justify-between items-center cursor-pointer">
                                      <h3 class="text-base font-medium text-gray-900 group-hover:text-blue-600">
                                          {faq.pregunta}
                                      </h3>
                                      <span class="ml-4 flex-shrink-0">
                                          <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600 transform group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                          </svg>
                                      </span>
                                  </summary>
                                  <div class="mt-2 text-gray-600 prose prose-sm prose-blue max-w-none">
                                      <p class="whitespace-pre-line">{faq.respuesta}</p>
                                  </div>
                              </details>
                          </div>
                      ))}
                  </div>
              </div>

              <!-- Sección Exámenes Finales -->
              <div class="bg-white rounded-xl shadow-lg p-5 transform transition-all hover:scale-[1.02]">
                  <div class="flex items-center mb-4">
                      <div class="w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center mr-3">
                          <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                          </svg>
                      </div>
                      <h2 class="text-xl font-semibold text-gray-900">Exámenes Finales</h2>
                  </div>
                  <div class="space-y-3">
                      {preguntasExamenes.map((faq, index) => (
                          <div class="border-b border-gray-200 last:border-0 pb-3 last:pb-0">
                              <details class="group">
                                  <summary class="flex justify-between items-center cursor-pointer">
                                      <h3 class="text-base font-medium text-gray-900 group-hover:text-indigo-600">
                                          {faq.pregunta}
                                      </h3>
                                      <span class="ml-4 flex-shrink-0">
                                          <svg class="w-5 h-5 text-gray-400 group-hover:text-indigo-600 transform group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                          </svg>
                                      </span>
                                  </summary>
                                  <div class="mt-2 text-gray-600 prose prose-sm prose-indigo max-w-none">
                                      <p class="whitespace-pre-line">{faq.respuesta}</p>
                                  </div>
                              </details>
                          </div>
                      ))}
                  </div>
              </div>
          </div>
          
          <!-- Botón para volver al inicio -->
          <div class="mt-8 text-center">
              <a href="/home" class="inline-flex items-center px-6 py-3 bg-white/20 backdrop-blur-sm text-white font-medium rounded-lg shadow-md hover:bg-white/30 focus:outline-none focus:ring-2 focus:ring-white/50 transition-colors duration-200">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                  </svg>
                  Volver al inicio
              </a>
          </div>
      </div>
  </div>
</Layout>

<style>
    details > summary {
        list-style: none;
    }
    details > summary::-webkit-details-marker {
        display: none;
    }
    .gradient-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        min-height: 100%;
        background: linear-gradient(135deg, #00235B 0%, #7B0000 100%);
        z-index: 0;
    }
    
    /* Asegurar que el contenedor principal tenga posición relativa y z-index para estar por encima del fondo */
    #faq-slide {
        position: relative;
        z-index: 1;
    }
</style>

