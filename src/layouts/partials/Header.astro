---
import config from "../../config/config.ts";
const { title } = config;
const titleArr = title.split(" | ");
const titleNameArr = titleArr[0].split(" ");
const titleName = titleNameArr[0];
const subTitleName = titleNameArr[1];
---

<div
    class="bg-white w-full flex flex-row items-center justify-between px-12 py-5 sticky top-0 z-50"
>
    <div class="flex items-center gap-x-5">
        <img
            src="/logos/logo.webp"
            alt={`Logo ${title}`}
            class="w-auto h-14 lg:h-20 object-contain"
            width="80"
            height="80"
        />
        <span class="text-base md:text-xl font-medium tracking-tight">
            {titleName}
            <b class="font-extrabold">{subTitleName}</b>
        </span>
    </div>

    <div class="flex gap-x-4">
        <a
            href="https://admin.influencerfunds.com/#/onboarding/general/company"
            target="_blank"
            class="flex flex-row items-center gap-x-2 text-base justify-between bg-gradient-to-r from-primary/90 to-secondary/90 text-black py-1 px-6 rounded-l-full rounded-br-full border border-black hover:opacity-90 transition-opacity"
        >
            Sign up
        </a>
        <a
            href="https://admin.influencerfunds.com/#/auth/login"
            target="_blank"
            class="flex flex-row items-center gap-x-2 text-base justify-between bg-gradient-to-r from-secondary/90 to-primary/90 text-black py-1 px-6 rounded-r-full rounded-bl-full border border-black hover:opacity-90 transition-opacity"
        >
            Log in
        </a>
    </div>
</div>

<style>
    a {
        box-shadow: 8px 8px 1px #000000;
    }
</style>
