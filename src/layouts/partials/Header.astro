---
import config from "../../config/config.ts";
const { title } = config;
const titleArr = title.split(" | ");
const titleNameArr = titleArr[0].split(" ");
const titleName = titleNameArr[0];
const subTitleName = titleNameArr[1];
---

<header
    class="bg-white w-full flex flex-row items-center justify-between px-6 md:px-12 py-5 sticky top-0 z-50"
>
    <div class="flex flex-row items-center gap-x-3 md:gap-x-5">
        <a href="/" class="flex flex-row items-center gap-x-3 md:gap-x-5">
            <img
                src="/logos/logo.webp"
                alt={`Logo ${title}`}
                class="w-auto h-10 sm:h-14 lg:h-20 object-contain"
                width="80"
                height="80"
            />
            <span class="text-base md:text-xl font-medium tracking-tight hidden sm:inline-block">
                {titleName}
                <b class="font-extrabold">{subTitleName}</b>
            </span>
        </a>
    </div>
    
    <div class="flex items-center gap-2">
        <a
            href="https://admin.influencerfunds.com/register"
            target="_blank"
            class="bg-primary hover:bg-secondary text-black py-1 px-3 md:px-4 lg:px-6 rounded-tl-full rounded-bl-full rounded-br-full border border-black shadow-[5px_5px_0px_#000000] hover:shadow-[6px_6px_0px_#000000] transition-all text-sm md:text-base whitespace-nowrap"
        >
            Register
        </a>
        <a
            href="https://admin.influencerfunds.com/"
            target="_blank"
            class="bg-primary hover:bg-secondary text-black py-1 px-3 md:px-4 lg:px-6 rounded-tr-full rounded-bl-full rounded-br-full border border-black shadow-[5px_5px_0px_#000000] hover:shadow-[6px_6px_0px_#000000] transition-all text-sm md:text-base whitespace-nowrap"
        >
            Login
        </a>
    </div>
</header>
