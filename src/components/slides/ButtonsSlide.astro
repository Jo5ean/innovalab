<script>
  document.addEventListener('DOMContentLoaded', () => {
    const dniInput = document.getElementById('dni-input') as HTMLInputElement;
    const searchButton = document.getElementById('search-button') as HTMLButtonElement;
    const searchResult = document.getElementById('search-result') as HTMLDivElement;
    
    // Datos de ejemplo - en un caso real, estos vendr√≠an de una API o base de datos
    const examenPorDni: Record<string, {materia: string, aula: string, fecha: string, hora: string}> = {
      '12345678': { materia: 'Matem√°ticas', aula: 'A101', fecha: '10/12/2023', hora: '10:00' },
      '23456789': { materia: 'F√≠sica', aula: 'B205', fecha: '11/12/2023', hora: '14:30' },
      '34567890': { materia: 'Qu√≠mica', aula: 'C310', fecha: '12/12/2023', hora: '09:15' },
    };
    
    // Funci√≥n para manejar la b√∫squeda
    function buscarAula() {
      if (!dniInput || !searchResult) return;
      
      const dni = dniInput.value.trim();
      
      if (dni.length < 7) {
        mostrarResultado(`<div class="error-message">Por favor, ingresa un DNI v√°lido</div>`);
        return;
      }
      
      const resultado = examenPorDni[dni];
      
      if (resultado) {
        mostrarResultado(`
          <div class="success-message">
            <h3>Informaci√≥n de Examen</h3>
            <div class="result-item"><strong>Materia:</strong> ${resultado.materia}</div>
            <div class="result-item"><strong>Aula:</strong> ${resultado.aula}</div>
            <div class="result-item"><strong>Fecha:</strong> ${resultado.fecha}</div>
            <div class="result-item"><strong>Hora:</strong> ${resultado.hora}</div>
          </div>
        `);
      } else {
        mostrarResultado(`
          <div class="error-message">
            No se encontraron ex√°menes programados para el DNI: ${dni}
          </div>
        `);
      }
    }
    
    // Funci√≥n para mostrar el resultado
    function mostrarResultado(html: string) {
      if (!searchResult) return;
      
      searchResult.innerHTML = html;
      searchResult.classList.add('active');
      
      // Aplicar estilos adicionales seg√∫n el contenido
      if (html.includes('error-message')) {
        searchResult.style.backgroundColor = 'rgba(255, 220, 220, 0.9)';
      } else {
        searchResult.style.backgroundColor = 'rgba(255, 255, 255, 0.9)';
      }
    }
    
    // Event listeners
    if (searchButton) {
      searchButton.addEventListener('click', buscarAula);
    }
    
    if (dniInput) {
      dniInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
          buscarAula();
        }
      });
      
      // Solo permitir n√∫meros en el input
      dniInput.addEventListener('input', (e) => {
        const input = e.target as HTMLInputElement;
        input.value = input.value.replace(/[^0-9]/g, '');
      });
      
      // Eliminar el enfoque autom√°tico
      // setTimeout(() => {
      //   dniInput.focus();
      // }, 500);
    }
    
    // Detectar y adaptar a pantallas t√°ctiles
    const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
    if (isTouchDevice) {
      document.body.classList.add('touch-device');
    }
  });
</script>