<div class="slide-background">
  <div class="background-image"></div>
  <div class="content-overlay">
    <div class="welcome-container">
      <button class="start-button pulse">COMENZAR</button>
    </div>
  </div>
  <div class="decorative-elements">
    <div class="circle circle-1"></div>
    <div class="circle circle-2"></div>
    <div class="circle circle-3"></div>
  </div>
</div>

<style>
  .slide-background {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: #000;
  }
  
  .background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/fondo.jpg');
    background-size: cover;
    background-position: center;
    z-index: 0;
    filter: brightness(0.7);
  }
  
  .content-overlay {
    position: absolute;
    z-index: 1;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    color: white;
    padding-bottom: 25vh; /* Posiciona el botón aproximadamente a 2/3 del alto */
  }
  
  .welcome-container {
    text-align: center;
    max-width: 600px;
    animation: fadeInUp 1s ease-out;
  }
  
  .welcome-text {
    font-size: 3rem;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
    text-align: center;
    margin-bottom: 0.5rem;
    font-weight: 700;
  }
  
  .subtitle {
    font-size: 1.5rem;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.8);
    margin-bottom: 2rem;
    opacity: 0.9;
    font-weight: 300;
  }
  
  .start-button {
    padding: 12px 25px;
    font-size: 1.3rem;
    font-weight: bold;
    background-color: #e74c3c;
    color: white;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: transform 0.3s, box-shadow 0.3s;
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .start-button:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 12px rgba(0,0,0,0.3);
    background-color: #c0392b;
  }
  
  /* Efecto de pulso para llamar la atención */
  .pulse {
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% {
      transform: scale(1);
      box-shadow: 0 0 0 0 rgba(231, 76, 60, 0.7);
    }
    
    70% {
      transform: scale(1.05);
      box-shadow: 0 0 0 10px rgba(231, 76, 60, 0);
    }
    
    100% {
      transform: scale(1);
      box-shadow: 0 0 0 0 rgba(231, 76, 60, 0);
    }
  }
  
  /* Elementos decorativos */
  .decorative-elements {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
    overflow: hidden;
  }
  
  .circle {
    position: absolute;
    border-radius: 50%;
    opacity: 0.15;
    background: linear-gradient(45deg, #e74c3c, #c0392b);
  }
  
  .circle-1 {
    width: 300px;
    height: 300px;
    top: -100px;
    right: -100px;
    animation: float 15s infinite ease-in-out;
  }
  
  .circle-2 {
    width: 200px;
    height: 200px;
    bottom: 10%;
    left: -50px;
    animation: float 20s infinite ease-in-out reverse;
  }
  
  .circle-3 {
    width: 150px;
    height: 150px;
    top: 30%;
    right: 10%;
    animation: float 25s infinite ease-in-out;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0) translateX(0);
    }
    25% {
      transform: translateY(-20px) translateX(10px);
    }
    50% {
      transform: translateY(10px) translateX(-15px);
    }
    75% {
      transform: translateY(15px) translateX(20px);
    }
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @media (max-width: 768px) {
    .welcome-text {
      font-size: 2rem;
    }
    
    .subtitle {
      font-size: 1.2rem;
    }
    
    .start-button {
      padding: 10px 20px;
      font-size: 1.2rem;
    }
    
    .circle-1 {
      width: 200px;
      height: 200px;
    }
    
    .circle-2 {
      width: 150px;
      height: 150px;
    }
    
    .circle-3 {
      width: 100px;
      height: 100px;
    }
  }
</style>

<script>
  // Agrega aquí cualquier funcionalidad necesaria para el botón
  document.addEventListener('DOMContentLoaded', () => {
    const startButton = document.querySelector('.start-button');
    if (startButton) {
      startButton.addEventListener('click', () => {
        // Navegación a la siguiente diapositiva
        const carousel = document.getElementById('main-carousel');
        const slides = carousel?.querySelector('.slides') as HTMLElement;
        
        if (slides) {
          slides.style.transform = 'translateX(-100%)';
          
          // Actualizar miniaturas activas si existe
          const thumbnails = document.querySelectorAll('.thumbnail-item');
          thumbnails.forEach((thumb, index) => {
            if (index === 1) { // Slide 2
              thumb.classList.add('active');
            } else {
              thumb.classList.remove('active');
            }
          });
        }
      });
    }
  });
</script>